# Fortinet Virtual Lab Environment Variables
# Copy this file to .env and fill in the values

#--------------------------------------
# EVE-NG Configuration
#--------------------------------------
# URL for the EVE-NG API
EVE_NG_URL=http://eve-ng-server-ip

# EVE-NG credentials
EVE_NG_USERNAME=admin
EVE_NG_PASSWORD=eve

#--------------------------------------
# Database Configuration
#--------------------------------------
DB_USERNAME=fortinet
DB_PASSWORD=fortinet123

#--------------------------------------
# Simulator Configuration
#--------------------------------------
# Set to 'realistic' for production-like behavior or 'demo' for consistent demo responses
SIMULATION_MODE=realistic

# Log level: debug, info, warn, error
LOG_LEVEL=info

#--------------------------------------
# Fortinet API Access
#--------------------------------------
# For VM image download authentication
FORTINET_SUPPORT_USERNAME=
FORTINET_SUPPORT_PASSWORD=

#--------------------------------------
# Cisco Meraki API Access
#--------------------------------------
# For VM image download authentication
CISCO_DEVNET_USERNAME=
CISCO_DEVNET_PASSWORD=

#--------------------------------------
# Brand Configuration
#--------------------------------------
# Paths to EVE-NG lab files
ARBYS_LAB_PATH=/opt/unetlab/labs/Fortinet\ Virtual\ Lab/Arbys/arbys.unl
BWW_LAB_PATH=/opt/unetlab/labs/Fortinet\ Virtual\ Lab/BWW/bww.unl
SONIC_LAB_PATH=/opt/unetlab/labs/Fortinet\ Virtual\ Lab/Sonic/sonic.unl

#--------------------------------------
# Web UI Configuration
#--------------------------------------
UI_TITLE=Fortinet Virtual Lab
UI_ADMIN_USERNAME=admin
UI_ADMIN_PASSWORD=admin123

#--------------------------------------
# Performance Settings
#--------------------------------------
# Maximum concurrent simulations
MAX_CONCURRENT_SIMS=3

# VM Resource Limits
FORTIGATE_RAM_MB=2048
FORTIMANAGER_RAM_MB=4096
FORTIANALYZER_RAM_MB=4096