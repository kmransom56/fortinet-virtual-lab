[topology]

# Management Network (10.0.0.0/24)
[10.0.0.0/24]
name=Management

# Arby's Network (192.168.10.0/24)
[192.168.10.0/24]
name=Arbys

# BWW Network (192.168.20.0/24)
[192.168.20.0/24]
name=BWW

# Sonic Network (192.168.30.0/24)
[192.168.30.0/24]
name=Sonic

# WAN Network (172.16.0.0/16)
[172.16.0.0/16]
name=WAN

# FortiManager VM
[FortiManager]
image=vFortiManager-7.2.3
config=fgtvm
console=vnc

# FortiAnalyzer VM
[FortiAnalyzer]
image=vFortiAnalyzer-7.2.3
config=fazvm
console=vnc

# FortiGate VMs
[Arbys-FGT]
image=vFortiGate-7.2.3
config=fgf
console=vnc

[BWW-FGT]
image=vFortiGate-7.2.3
config=fgf
console=vnc

[Sonic-FGT]
image=vFortiGate-7.2.3
config=fgf
console=vnc

# Network Connections
[Connection:1]
node1=FortiManager:port1
node2=Management:port1

[Connection:2]
node1=FortiAnalyzer:port1
node2=Management:port2

[Connection:3]
node1=Arbys-FGT:port1
node2=Management:port3

[Connection:4]
node1=BWW-FGT:port1
node2=Management:port4

[Connection:5]
node1=Sonic-FGT:port1
node2=Management:port5

[Connection:6]
node1=Arbys-FGT:port2
node2=Arbys:port1

[Connection:7]
node1=BWW-FGT:port2
node2=BWW:port1

[Connection:8]
node1=Sonic-FGT:port2
node2=Sonic:port1

[Connection:9]
node1=Arbys-FGT:port3
node2=WAN:port1

[Connection:10]
node1=BWW-FGT:port3
node2=WAN:port2

[Connection:11]
node1=Sonic-FGT:port3
node2=WAN:port3

# Additional connections for management
[Connection:12]
node1=FortiManager:port2
node2=Arbys:port2

[Connection:13]
node1=FortiManager:port3
node2=BWW:port2

[Connection:14]
node1=FortiManager:port4
node2=Sonic:port3

[Connection:15]
node1=FortiAnalyzer:port2
node2=Arbys:port3

[Connection:16]
node1=FortiAnalyzer:port3
node2=BWW:port3

[Connection:17]
node1=FortiAnalyzer:port4
node2=Sonic:port4
